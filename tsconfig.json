{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "./src",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "dist", "bundle"],
}
